<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--输入框-->
    <style name="ThinkTankTextEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:gravity">start</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
    </style>
</resources>