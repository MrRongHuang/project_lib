<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_15"
    android:paddingVertical="@dimen/dp_20"
    app:shape_angle="270"
    app:shape_radius="@dimen/dp_8"
    app:shape_solidColor="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        tools:text="下架选中的产品？" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12"
        tools:text="下架后商品不可在前台继续售卖，是否继续？" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_8"
            android:text="取消"
            android:textColor="@color/color_FF8500"
            android:textSize="@dimen/sp_11"
            app:shape_radius="@dimen/dp_60"
            app:shape_strokeColor="@color/color_FF8500"
            app:shape_strokeWidth="@dimen/dp_1"
            app:shape_solidColor="@color/white"
            app:shape_solidPressedColor="@color/color_0D"
            />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_8"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            app:shape_radius="@dimen/dp_60"
            app:shape_solidColor="@color/color_FF8500"
            app:shape_solidPressedColor="@color/color_AAFF8500"
            />
    </LinearLayout>


</com.hjq.shape.layout.ShapeLinearLayout>
