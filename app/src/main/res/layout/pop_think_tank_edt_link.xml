<?xml version="1.0" encoding="utf-8"?>

<layout>

    <com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_20"
        app:shape_angle="270"
        app:shape_radius="@dimen/dp_8"
        app:shape_solidColor="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="插入链接"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/edtDescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="请输入标题"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_12"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_12"
            app:shape_solidColor="@color/color_FAFAFA" />


        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/edtLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="请输入链接"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_12"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_12"
            app:shape_solidColor="@color/color_FAFAFA" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/color_FF8500"
                android:textSize="@dimen/sp_11"
                app:shape_radius="@dimen/dp_60"
                app:shape_solidColor="@color/white"
                app:shape_solidPressedColor="@color/color_0D"
                app:shape_strokeColor="@color/color_FF8500"
                app:shape_strokeWidth="@dimen/dp_1" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_8"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                app:shape_radius="@dimen/dp_60"
                app:shape_solidColor="@color/color_FF8500"
                app:shape_solidPressedColor="@color/color_AAFF8500" />
        </LinearLayout>


    </com.hjq.shape.layout.ShapeLinearLayout>

</layout>